<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="RegressionSuite" verbose="1">
  <test name="AllTests">
    <groups>
      <run>
        <!-- Exclude known flaky tests from nightly/full regression runs -->
        <exclude name="flaky"/>
      </run>
    </groups>
    <packages>
      <!-- run all tests under this package -->
      <package name="com.archana.meta.tests"/>
    </packages>
  </test>
</suite>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="RegressionSuite" verbose="1">
  <test name="RegressionTests">
    <groups>
      <run>
        <exclude name="flaky"/>
      </run>
    </groups>
    <packages>
      <package name="com.archana.meta.tests"/>
    </packages>
  </test>
</suite>
